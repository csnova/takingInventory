extends layout

block content
    h1=title

    form(method='POST')
        div.form-group
            label(for='name') Fabric name:
            input#name.form-control(type='text' placeholder='Canvas, Leather etc.' name='name' required value=(undefined===fabric ? '' : fabric.name) )
            br
            label(for='description') Description:
            input#description.form-control(type='text' placeholder='Canvas bags are...' name='description' required value=(undefined===fabric ? '' : fabric.description) )
            br
            label(for='image') Image File Name:
            input#image.form-control(type='text' placeholder='canvas.jpg' name='image' required value=(undefined===fabric ? '' : fabric.imageLocation) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
