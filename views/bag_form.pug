extends layout

block content
    h1= title

    form(method='POST')
        div.form-group
            label(for='name') Product Name:
            input#name.form-control(type='text' placeholder='Name of Product' name='name' required value=(undefined===bag ? '' : bag.name) )
            br
            label(for='price') Product Price:
            input#price.form-control(type='number' step="0.01" placeholder='19.99' name='price' required value=(undefined===bag ? '' : bag.price) )
            br
            label(for='stock') Quantity in Stock:
            input#stock.form-control(type='number' step="1" min="0" placeholder='12' name='stock' required value=(undefined===bag ? '' : bag.stock) )
            br
            label(for='category') Category:
            select#category.form-control(name='category' required)
                option(value='') --Please select a category--
                for category in categories
                    if bag
                        if category._id.toString()===bag.category._id.toString()
                            option(value=category._id selected) #{category.name}
                        else
                            option(value=category._id) #{category.name}
                    else
                        option(value=category._id) #{category.name}
            br
            label(for='fabric') Fabric:
            select#fabric.form-control(name='fabric' required)
                option(value='') --Please select an fabric--
                for fabric in fabrics
                    if bag
                        if fabric._id.toString()===bag.fabric._id.toString()
                            option(value=fabric._id selected) #{fabric.name}
                        else
                            option(value=fabric._id) #{fabric.name}
                    else
                        option(value=fabric._id) #{fabric.name}
            br
            label(for='color') Color:
            select#color.form-control(name='color' required)
                option(value='') --Please select an color--
                for color in colors
                    if bag
                        if color._id.toString()===bag.color._id.toString()
                            option(value=color._id selected) #{color.name}
                        else
                            option(value=color._id) #{color.name}
                    else
                        option(value=color._id) #{color.name}
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
