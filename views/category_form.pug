extends layout

block content
    h1=title

    form(method='POST')
        div.form-group
            label(for='name') Category name:
            input#name.form-control(type='text' placeholder='Classic, Jumbo etc.' name='name' required value=(undefined===category ? '' : category.name) )
            br
            label(for='description') Description:
            input#description.form-control(type='text' placeholder='Classic bags are...' name='description' required value=(undefined===category ? '' : category.description) )
            br
            label(for='image') Image File Name:
            input#image.form-control(type='text' placeholder='classic.jpg' name='image' required value=(undefined===category ? '' : category.imageLocation) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
