extends layout

block content

    div(class="fullPage")

        div(class="headerImage")

            img(src=fabric.image alt="fabric example" style='width:200px; height:200px; border: 1px solid black;')

        div(class="container")

            h1 Fabric: #{fabric.name}

            p <em>Description:</em> #{fabric.description} 

            div(style='margin-left:20px;margin-top:20px')

                h4 Products with this fabric

            table
                tr
                    th Product Name
                    th Price

                each bag in fabric_bags
                    tr
                        td 
                            a(href=bag.url) #{bag.name} Bean Bag Chair
                        td  #{bag.price} 


                else
                    p No products are made with this fabric
