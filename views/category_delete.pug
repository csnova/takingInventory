extends layout

block content

    h1 #{title}: #{category.name}

    if category_bags.length

        p #[strong Delete the following products before attempting to delete this category.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Bags
            dl
                each bag in category_bags
                    dt
                        a(href=bag.url) #{bag.name}
    else
        p Do you really want to delete this Category?

        form(method='POST')
            div.form-group
                input#categoryid.form-control(type='hidden' name='categoryid', value=category._id )

            button.btn.btn-primary(type='submit') Delete
